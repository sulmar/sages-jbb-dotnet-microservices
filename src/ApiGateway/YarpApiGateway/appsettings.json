{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Services": {

    "products": {
      "https": [ "localhost:7251" ]
    },

    "cart": {
      "https": [ "localhost:7298" ]
    },

    "blazor-app": {
      "https": [ "localhost:7108" ]
    },

    "ordering": {
      "https": [ "localhost:7104" ]
    }

  },

  "ReverseProxy": {

    "Routes": {
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },

      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart"
        }
      },

      "cart-signalr-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "signalr/{**catch-all}"
        }
      },

      "orders-route": {
        "ClusterId": "ordering-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },

      "blazor-app-route": {
        "ClusterId": "blazor-app-cluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "products-cluster": {
        "Destinations": {
          "product-catalog-destination1": {
            "Address": "https://products"
          }
        }
      },

      "cart-cluster": {
        "Destinations": {
          "cart-destination1": {
            "Address": "https://cart"
          }
        }
      },

      "ordering-cluster": {
        "Destinations": {
          "ordering-destination1": {
            "Address": "https://ordering"
          }
        }
      },

      "blazor-app-cluster": {
        "Destinations": {
          "blazor-app-destination1": {
            "Address": "https://blazor-app"
          }
        }
      }

    }
  }
}
