{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Services": {

    "products": {
      "http": [ "productcatalog.api:8080" ]
    },

    "cart": {
      "http": [ "shoppingcart.api:8080" ]
    },

    "blazor-app": {
      "https": [ "localhost:7108" ]
    },

    "ordering": {
      "http": [ "ordering.api:8080" ]
    },

    "identity-provider": {
      "http": [ "identityprovider.api:8080" ]
    }

  },

  "ReverseProxy": {

    "Routes": {

      "identity-provider-route": {
        "ClusterId": "identity-provider-cluster",
        "Match": {
          "Path": "api/login"
        }
      },

      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },

      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart"
        }
      },

      "cart-signalr-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "signalr/{**catch-all}"
        }
      },

      "orders-route": {
        "ClusterId": "ordering-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },

      "blazor-app-route": {
        "ClusterId": "blazor-app-cluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },

    "Clusters": {

      "identity-provider-cluster": {
        "Destinations": {
          "identity-provider-destination1": {
            "Address": "http://identity-provider"
          }
        }
      },

      "products-cluster": {
        "Destinations": {
          "product-catalog-destination1": {
            "Address": "http://products"
          }
        }
      },

      "cart-cluster": {
        "Destinations": {
          "cart-destination1": {
            "Address": "http://cart"
          }
        }
      },

      "ordering-cluster": {
        "Destinations": {
          "ordering-destination1": {
            "Address": "http://ordering"
          }
        }
      },

      "blazor-app-cluster": {
        "Destinations": {
          "blazor-app-destination1": {
            "Address": "http://blazor-app"
          }
        }
      }

    }
  }
}
